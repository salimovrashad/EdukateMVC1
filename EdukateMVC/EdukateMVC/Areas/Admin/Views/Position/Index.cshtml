@model List<Position>
@{
    ViewData["Title"] = "Index";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800">Blank Page</h1>
    <a asp-action="Create" asp-controller="Position" class="btn btn-outline-primary">Create</a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th colspan="2" scope="col">Handle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td><a asp-action="Update" asp-controller="Position" asp-route-id="@item.Id" class="btn btn-success">EDIT</a></td>
                    <td><a asp-action="Delete" asp-controller="Position" asp-route-id="@item.Id" class="btn btn-danger">DELETE</a></td>
                </tr>
            }
        </tbody>
    </table>

</div>
<!-- /.container-fluid -->